@model HomeDetailsViewModel

@{
    
    ViewBag.Title = "Students Details";
     var imagepath = "~/images/" + (Model.Student.photopath ?? "image.jpg");
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Student.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top imgdisplay" src="@imagepath" asp-append-version="true"/>
                <h4>ID:@Model.Student.Id</h4>
                <h4>Email:@Model.Student.Email</h4>
                <h4>Department:@Model.Student.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a class="btn btn-primary" asp-action="edit" asp-controller="home" asp-route-id="@Model.Student.Id">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>



@section scripts{ 
    <script src="~/js/CustomScript.js"></script>
}