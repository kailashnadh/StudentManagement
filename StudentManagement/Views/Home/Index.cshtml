@model IEnumerable<Student>
@{

    ViewBag.Title = "Students List";
    
}

<div class="card-deck">
    @foreach (var m in Model)
    {
        var imagepath = "~/images/" + (m.photopath ?? "image.jpg");
        <div class="card m-3" style="min-width:18rem; max-width:30.5%">
            <div class="card-header">
                <h3>@m.Name</h3>
            </div>

            <img class="card-img-top imgdisplay" src="@imagepath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@m.Id" class="btn btn-primary m-1">view</a>
                <a class="btn btn-primary m-1" asp-action="edit" asp-controller="home" asp-route-id="@m.Id">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
